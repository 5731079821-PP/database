extends layout.jade
block content
  script.
    document.getElementById('ch').onchange=function() {
      if(this.selectedInd==='year'){
      var showBox = document.getElementById('showBox');
      showBox.style.hidden = 'block';
      }else{
        showBox.style.hidden = 'none';
      }
    }  
  style.
    a {color: black;margin: 5px; text-decoration: none;}

    .dropdown-menu li:hover .sub-menu {
    visibility: visible;
    }

    .dropdown:hover .dropdown-menu {
    display: block;
    margin-top: 0;
    }

    .dropdown-menu .sub-menu {
    left: 100%;
    position: absolute;
    top: 0;
    visibility: hidden;
    margin-top: -1px;
    }
    .hiddengoi {
      display: none;
    }
  script.
    function show(e) {
    var display = e.options[e.selectedIndex].value;
    var showBox = document.getElementById('showBox');
    if(display=="year") showBox.style.display = "block";
    else showBox.style.display = "none";
    }
  form(name='search', method='POST', action='registrar')
    table(style='border-collapse: collapse; ')
